<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="15dp"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/botImg"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:src="@drawable/robot"

        app:layout_constraintBottom_toBottomOf="@+id/botText"
        app:layout_constraintStart_toStartOf="parent" />


    <TextView
        android:id="@+id/botText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:layout_marginEnd="7dp"
        android:layout_marginBottom="5dp"
        android:padding="15dp"
        android:background="@drawable/sendbg"
        android:textColor="@color/white"
        android:text="HHIKNiijlm;;llkoopopml;klk;kllml;lkk;l;l,.mlm;m;lkl;k;lk;lllllllllllllllllllllllllllllllllllklklklkkkkmkm"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/botImg" />

    <ImageView
        android:id="@+id/humanImg"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:src="@drawable/man"

        app:layout_constraintBottom_toBottomOf="@+id/botText"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/humanText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:layout_marginEnd="7dp"
        android:layout_marginBottom="5dp"
        android:padding="15dp"
        android:textColor="@color/white"
        android:background="@drawable/recbg"
        android:text="HHIKNiijlm;;llkoopopml;klk;kllml;lkk;l;l,.mlm;m;lkl;k;lk;lllllllllllllllllllllllllllllllllllklklklkkkkmkm"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/humanImg" />

</androidx.constraintlayout.widget.ConstraintLayout>